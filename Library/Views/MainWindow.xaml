<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Library.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" AllowsTransparency="True" Background="Transparent"
         WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>

        <Canvas>
            <Rectangle RadiusX="20" RadiusY="20" Width="700" Height="600" Fill="{StaticResource FirstColor}">
                <Canvas.Left>
                    <System:Double>50</System:Double>
                </Canvas.Left>
            </Rectangle>
            <Rectangle Width="210" Height="600" Fill="White" RadiusX="20" RadiusY="20">
                <Canvas.Left>540</Canvas.Left>
            </Rectangle>
            <Ellipse Width="350" Height="600" Fill="White">
                <Canvas.Left>380</Canvas.Left>
                
            </Ellipse>
            <StackPanel Orientation="Vertical" Width="300" Height="150" Canvas.Left="55" Canvas.Top="20">
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Border Background="White" CornerRadius="50" Width="130" Height="60" 
                        Margin="20,0,0,0">

                        <Button Width="105" Height="35" Background="White" BorderThickness="0" BorderBrush="AliceBlue"
                                Command="{Binding BookSectionCommand}"
                                Content="Books" FontFamily="Comic Sans MS" FontSize="24" Foreground="{StaticResource FirstColor}"
                                >
                          
                        </Button>
                    </Border>

                    <Border Background="White" CornerRadius="50" Width="130" Height="60" 
                        Margin="20,0,0,0">
                        <Button Width="105" Height="35" Background="White" BorderThickness="0" BorderBrush="AliceBlue"
                                Content="Filials" FontFamily="Comic Sans MS" FontSize="24" Foreground="{StaticResource FirstColor}"
                                >
                           
                        </Button>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal"  Margin="0,10,0,0">

                    <Border Background="White" CornerRadius="50" Width="130" Height="60" 
                        Margin="20,0,0,0">
                        <Button Width="105" Height="35" Background="White" BorderThickness="0" BorderBrush="AliceBlue"
                                Content="Clients" FontFamily="Comic Sans MS" FontSize="24" Foreground="{StaticResource FirstColor}"
                               >
                           
                        </Button>
                    </Border>
                    <Border Background="White" CornerRadius="50" Width="130" Height="60" 
                        Margin="20,0,0,0">
                        <Button Width="105" Height="35" Background="White" BorderThickness="0" BorderBrush="AliceBlue"
                                Content="Workers" FontFamily="Comic Sans MS" FontSize="24" Foreground="{StaticResource FirstColor}"
                                >
                        
                        </Button>
                    </Border>
                </StackPanel>
                
            </StackPanel>
            <TextBlock Canvas.Left="100" Canvas.Top="170" FontSize="35" FontFamily="Berlin Sans FB Demi" Foreground="White">
                book store
            </TextBlock>
            <TextBlock Canvas.Left="100" Canvas.Top="220" FontSize="16" FontFamily="Berlin Sans FB Demi" Foreground="WhiteSmoke">
                Welcome to our book store
            </TextBlock>
            <StackPanel Background="White" Width="300" Height="350" Canvas.Top="140" Canvas.Left="440">
                <TextBlock Name="bookStoreTxtb" FontSize="80" FontFamily="Comic Sans MS" TextAlignment="Left" Foreground="{StaticResource FirstColor}" >
               
 Book 
                </TextBlock>

                <TextBlock Name="bookStoreTxtb2" FontSize="80" FontFamily="Comic Sans MS"  TextAlignment="Center" Foreground="{StaticResource FirstColor}">
                   
  Store
                </TextBlock>
            </StackPanel>
            <Border x:Name="btn" CornerRadius="20" Background="White" Width="50" Height="50" BorderThickness="2" BorderBrush="{StaticResource FirstColor}">
               
                <Canvas.Left>
                    <System:Double>670</System:Double>
                </Canvas.Left>
                <Canvas.Top>
                    <System:Double>15</System:Double>
                </Canvas.Top>

                <Button x:Name="Exit" Width="30" Height="30" Background="White" Click="Exit_Click" BorderThickness="0" Foreground="{StaticResource FirstColor}"
                        Style="{StaticResource ExitButtonStyle}"
                       Content="X" FontSize="24" >
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                               
                    </Button.Resources>
       
                </Button>

            </Border>
        </Canvas>

    </Grid>
</Window>
